generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  fullName String
  username String
  password String
  email    String
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  price       Float
  description String
  poster      String
  images      ProductImage[]
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int
  Product   Product @relation(fields: [productId], references: [id])
}
